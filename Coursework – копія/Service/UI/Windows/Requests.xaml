<Window x:Class="UI.Requests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStartupLocation="CenterScreen"
        FontFamily="OCR A"
        WindowStyle="None" FontSize="18"
        Height="450" Width="800" Foreground="#FFF44336" Closed="Window_Closed">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Label Name="B_Close" Width="30" HorizontalAlignment="Right" VerticalAlignment="Center"
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Stretch" Content="X" MouseDown="B_Close_MouseDown"/>
        <Grid Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*" MinWidth="150"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Flipper x:Name="flipper" Height="300" Width="300"
            Grid.ColumnSpan="3" Visibility="Hidden" IsEnabled="False">
                <materialDesign:Flipper.FrontContent>
                    <Grid Height="300" Background="#FF232323">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="2" Margin="10,0">
                            <Label Content="Login &gt; " DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>
                            <TextBox x:Name="tb_login"
                                 VerticalAlignment="Center"/>
                        </DockPanel>
                        <Button x:Name="Flipper_b" Content="Save" 
                            Foreground="White" Grid.Row="4"
                            Margin="10,10" Click="Flipper_b_Click"/>
                    </Grid>
                </materialDesign:Flipper.FrontContent>
            </materialDesign:Flipper>

            <ListBox x:Name="lb_menu" Height="450" Background="#FF232323">
                <ListBoxItem>
                    <Image Height="30" Margin="15,0" x:Name="i_profile" 
                   Source="../Windows/Icons/account.png" MouseDown="I_Profile_MouseDown"/>
                </ListBoxItem>
                <ListBoxItem>
                    <materialDesign:Badged x:Name="chat_badged"
                            Badge="" BadgeBackground="#FFA81F15"
                            BadgeForeground="#FF232323" BadgePlacementMode="TopRight"
                            Height="30" Margin="15,0" MouseDown="Chat_badged_MouseDown">
                        <Image Source="../Windows/Icons/all.png"/>
                    </materialDesign:Badged>
                </ListBoxItem>
                <ListBoxItem>
                    <materialDesign:Badged x:Name="allContacts_badget"
                            Badge="" BadgeBackground="#FFA81F15"
                            BadgeForeground="#FF232323" BadgePlacementMode="TopRight"
                            Height="30" Margin="17,0" MouseDown="AllContacts_badget_MouseDown">
                        <Image Source="../Windows/Icons/Contacts.png"/>
                    </materialDesign:Badged>
                </ListBoxItem>
                <ListBoxItem>
                    <materialDesign:Badged x:Name="addFriend_badget"
                            Badge="" BadgeBackground="#FFA81F15"
                            BadgeForeground="#FF232323" BadgePlacementMode="TopRight"
                            Height="24" Margin="17,0" MouseDown="AddFriend_badget_MouseDown">
                        <Image Source="../Windows/Icons/addFriend.png"/>
                    </materialDesign:Badged>
                </ListBoxItem>
            </ListBox>

            <Grid Grid.Column="2" Visibility="Hidden" x:Name="gr_requestInfo">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image x:Name="avatar_r" Margin="10"/>

                <StackPanel Grid.Row="1">
                    <Label Name="l_login_r" Content="Login >"/>
                    <TextBlock x:Name="login_r" />
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Label Name="l_nickname_r" Content="Nickname >"/>
                    <TextBlock x:Name="nickname_r" />
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <Label Name="l_status_r" Content="Status >"/>
                    <TextBlock x:Name="status_r" />
                </StackPanel>

                <Button Visibility="Hidden" x:Name="bt_accept_r" Margin="10" Grid.Row="4" 
                        Content="Accept" Foreground="White" Click="Bt_accept_r_Click"/>
                <Button Visibility="Hidden" x:Name="bt_reject_r" Margin="10" Grid.Row="5" 
                        Content="Reject" Foreground="White" Click="Bt_reject_r_Click"/>
            </Grid>

            <StackPanel x:Name="sp_Requests" Grid.Column="1">
                <Label Name="l_send" FontSize="14">Send requests:</Label>
                <ListBox MinHeight="195"  x:Name="lb_requests_Send" SelectionChanged="Lb_requests_Send_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Auto" />

                <Label Name="l_receipt" FontSize="14">Receipt requests:</Label>
                <ListBox MinHeight="195" Grid.Column="1" x:Name="lb_requests" SelectionChanged="Lb_requests_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Auto" />

            </StackPanel>

            <GridSplitter HorizontalAlignment="Left" Height="450" VerticalAlignment="Top"
                      Width="5" Grid.Column="2" Background="#FF232323" IsEnabled="false"
                      Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
